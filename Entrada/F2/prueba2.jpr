func mostrarFactorial(int n2){
    var fact = 1;
    var cadena1 = "El factorial de: " + n2 + " = ";
    if (n2 =! 0) {
        for (var i = n2; i > 0; i--) {
            fact = fact * i;
            cadena1 = cadena1 + i;
            if (i > 1) {
                cadena1 = cadena1 + " * ";

            } else {
                cadena1 = cadena1 + " = ";
            }
        }
    }
    cadena1 = cadena1 + fact;
    print(cadena1);
}

