func FactorialIterativo(int n2){
    print("==============Para Calificar Ciclos=============");
    print("----------------CICLO WHILE Y FOR---------------");

    var numeroFactorial = n2;
    while (numeroFactorial > -1) {
        mostrarFactorial(numeroFactorial);
        numeroFactorial--;
    }
    print("------------------------------------------------");
    SentenciasAnidadas();
    print("======================================");
}

